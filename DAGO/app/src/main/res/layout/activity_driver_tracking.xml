<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverTracking" >


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnStartTrip"
            android:text="START TRIP"
            android:enabled="false"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_sign_in_background"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

       <!-- <Button
            android:id="@+id/btnWaiting"
            android:text="START WAITING"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />-->

        <TextView
            android:id="@+id/txtCurrFare"
            android:text="Rs. 0.00"
            android:padding="5dp"
            android:textSize="20dp"
            android:visibility="gone"
            android:textAlignment="center"
            android:background="@drawable/btn_oflline_background"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>